@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="container login-body">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4 align-self-center">
            <div class="cards">
                <h2>Login</h2>
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email">E-mail</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password">Senha</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    Lembrar-me?
                                </label>
                            </div>
                        </div>
                        <div class="form-group  form-bt">
                            <button type="submit" class="btn btn-primary">Entrar</button>
                        </div>

                    </form>
                </section>
            </div>
                <div class="form-group form-actions">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                    </p>
                    <p>
                        <a class="nav-link" asp-area="" asp-page="/Index">Voltar para Home</a>
                    </p>
                    <!---- <p>
                 <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
             </p>
             <p>
                     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                 </p>-->
                </div>
            </div>
            
        </div>
    </div>


    <style>
        header{
            display: none;
        }
        footer{
            display: none;
        }
        body{
            background-color: #2207c7;
        }
    </style>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
